extends ../layout

block content
    style.
        .elipsis {
            width : 100px;
            white-space : nowrap;
            overflow : hidden;
            text-overflow : elipsis;
        }
    each book, index in books
        div
            p
                a(href=book.link) !{book.title}
            p
                img(src=book.image)
            p= book.isbn
            p= book.author
            p= book.price
            p= publisher


